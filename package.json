{
  "name": "@diatonic/piano",
  "version": "0.3.0",
  "description": "Interactive SVG piano for React",
  "keywords": [
    "react",
    "react-component",
    "svg",
    "piano",
    "keyboard",
    "music",
    "musical",
    "instrument"
  ],
  "author": "Vegard Egeland",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "ladle serve",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "check": "biome check .",
    "check:fix": "biome check . --write",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --write",
    "format": "biome format .",
    "format:fix": "biome format . --write",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "prepublishOnly": "npm run build && npm run test:run && npm run check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vegardege/diatonic-piano.git"
  },
  "bugs": {
    "url": "https://github.com/vegardege/diatonic-piano/issues"
  },
  "homepage": "https://github.com/vegardege/diatonic-piano#readme",
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "kamasi": "^0.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@ladle/react": "^5.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitest/coverage-v8": "^4.0.3",
    "@vitest/ui": "^4.0.3",
    "happy-dom": "^20.0.8",
    "tsup": "^8.5.0",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "vitest": "^4.0.3"
  }
}
